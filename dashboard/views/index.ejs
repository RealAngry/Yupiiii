<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yupi Bot Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-dark text-white sidebar p-0">
                <div class="d-flex flex-column align-items-center p-3 mb-4">
                    <img src="<%= botAvatar %>" alt="Bot Avatar" class="bot-avatar mb-2">
                    <h4><%= botInfo.name %></h4>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="/"><i class="fas fa-server me-2"></i> Servers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/announcements"><i class="fas fa-bullhorn me-2"></i> Announcements</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/bot-status"><i class="fas fa-info-circle me-2"></i> Bot Status</a>
                    </li>
                </ul>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-10 main-content">
                <div class="container py-4">
                    <h1 class="mb-4">Select a Server</h1>
                    
                    <div class="row">
                        <% if (guilds.length === 0) { %>
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i> Yupi is not in any servers yet. Invite the bot to a server to get started!
                                </div>
                            </div>
                        <% } else { %>
                            <% guilds.forEach(guild => { %>
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body d-flex flex-column">
                                            <div class="d-flex align-items-center mb-3">
                                                <img src="<%= guild.icon %>" alt="<%= guild.name %>" class="me-3" style="width: 50px; height: 50px; border-radius: 50%;">
                                                <h5 class="card-title mb-0"><%= guild.name %></h5>
                                            </div>
                                            <p class="card-text text-muted mb-3"><i class="fas fa-users me-2"></i> <%= guild.memberCount %> members</p>
                                            <a href="/server/<%= guild.id %>" class="btn btn-primary mt-auto">Manage Server</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html> 